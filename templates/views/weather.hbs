<body>
    {{>navbar}}
    <div class="weatherBody">
        <div class="search">
            <input value='' id="cityname" placeholder="Enter your city name" />
            <button type="submit" id='btn' class="button">Search</button>
        </div>
        <div class="weather_box">
            <div class="dateTime_content">
                <p id='day'></p>
                <p id='date'></p>
            </div>
            <div class="output">
                <p id='country&city'>Get output here</p>
                <div class="temp">
                    <p id='temp'></p>
                    <p id='temp_status'></p>
                </div>
            </div>
        </div>
    </div>

    {{>footer}}

