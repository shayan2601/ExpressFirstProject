<body>
     {{>navbar}}

    <div class="mainSection">
        <div class="row mx-auto">
            <div class="col-md-6 col-12 main_section_left">
                <p>Welcome to weather app</p>
                <h2>Get the latest<span style='color:red'> updates</span> about weather</h2>
                <a href="/weather"> <button class="btn btn-light">Check now</button></a>
            </div>
            <div class="col-md-6 col-12 main_section_right">
                <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="https://img.icons8.com/fluency/452/weather.png"
                                alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="https://www.metaweather.com/static/img/weather/lc.svg"
                                alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100"
                                src="https://creazilla-store.fra1.digitaloceanspaces.com/cliparts/38562/thunderstorm-weather-clipart-md.png"
                                alt="Third slide">
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
   {{>footer}}
</body>

</html>